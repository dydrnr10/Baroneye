<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fb5d5e"
    android:orientation="vertical" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/password_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="50sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="143dp"
            app:layout_constraintHorizontal_bias="0.199" />

        <TextView
            android:id="@+id/password_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="50sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="143dp"
            app:layout_constraintHorizontal_bias="0.41" />

        <TextView
            android:id="@+id/password_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="50sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="143dp"
            app:layout_constraintHorizontal_bias="0.595" />

        <TextView
            android:id="@+id/password_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="50sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="143dp"
            app:layout_constraintHorizontal_bias="0.794" />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/homelinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/password"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/number_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_1"
        android:layout_alignTop="@+id/number_2"
        android:layout_toStartOf="@+id/number_2"
        android:layout_marginEnd="24dp" />

    <ImageButton
        android:id="@+id/number_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_2"
        android:layout_alignBottom="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <ImageButton
        android:id="@+id/number_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_3"
        android:layout_alignTop="@+id/number_2"
        android:layout_toEndOf="@+id/number_2"
        android:layout_marginStart="24dp" />

    <ImageButton
        android:id="@+id/number_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_4"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/number_1" />

    <ImageButton
        android:id="@+id/number_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_5"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/number_1" />

    <ImageButton
        android:id="@+id/number_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_6"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/number_3" />

    <ImageButton
        android:id="@+id/number_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_7"
        android:layout_below="@+id/number_4"
        android:layout_alignStart="@+id/number_4"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/number_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_8"
        android:layout_below="@+id/number_5"
        android:layout_alignStart="@+id/number_5"
        android:layout_marginTop="24dp"/>

    <ImageButton
        android:id="@+id/number_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:background="#00ff0000"
        android:src="@drawable/number_9"
        android:layout_below="@+id/number_6"
        android:layout_alignStart="@+id/number_6"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/baron_i"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>